<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Timer.Activity.StopWatchActivity"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.04"/>

   <FrameLayout
       android:layout_width="match_parent"
       android:layout_height="0dp"
       android:layout_weight="0.2">

       <!-- 저장 버튼 -->
       <Button
           android:id="@+id/bt_save"
           android:layout_width="match_parent"
           android:layout_height="match_parent"
           android:background="@drawable/saveloading_bt"
           android:text="저 장"
           android:textStyle="bold"
           android:textColor="#ffffff"
           android:textSize="22dp"/>

       <!-- 기록보기 버튼 -->
       <Button
           android:id="@+id/bt_saveloading"
           android:layout_width="match_parent"
           android:layout_height="match_parent"
           android:background="@drawable/saveloading_bt"
           android:text="기 록 보 기"
           android:textStyle="bold"
           android:textColor="#ffffff"
           android:textSize="22dp"/>

   </FrameLayout>


    <TextView
        android:id="@+id/swtv1"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:text="00:00:00"
        android:gravity="center"
        android:textSize="50dp"
        android:textStyle="bold"
        android:textColor="#000000"/>

    <ListView
        android:id="@+id/swlv1"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.25">

        <!-- 계속(중지버튼 눌리면 계속버튼으로 바뀌게,  초기화 버튼 -->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:orientation="horizontal">

            <!-- 계속버튼 바뀌게 -->
            <Button
                android:id="@+id/bt_restart"
                android:layout_width="0dp"
                android:layout_height="60dp"
                android:layout_weight="1"
                android:background="@drawable/restart_bt"
                android:text="계속"
                android:textStyle="bold"
                android:textColor="#ffffff"
                android:textSize="22dp"/>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.02"/>

            <Button
                android:id="@+id/bt_reset"
                android:layout_width="0dp"
                android:layout_height="60dp"
                android:layout_weight="1"
                android:background="@drawable/resert_bt"
                android:text="초기화"
                android:textStyle="bold"
                android:textColor="#ffffff"
                android:textSize="22dp"/>


        </LinearLayout>

        <!-- 중지 구간기록 버튼 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/bt_pause"
                android:layout_width="0dp"
                android:layout_height="60dp"
                android:layout_weight="1"
                android:background="@drawable/stop_bt"
                android:text="중지"
                android:textStyle="bold"
                android:textColor="#ffffff"
                android:textSize="22dp"/>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.02"/>

            <Button
                android:id="@+id/bt_lap"
                android:layout_width="0dp"
                android:layout_height="60dp"
                android:layout_weight="1"
                android:text="구간기록"
                android:textStyle="bold"
                android:textColor="#ffffff"
                android:textSize="22dp"
                android:background="@drawable/lap_bt"/>

        </LinearLayout>

        <!-- 시작버튼 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/bt_start"
                android:layout_width="0dp"
                android:layout_height="60dp"
                android:layout_weight="1"
                android:text="시   작"
                android:textSize="22dp"
                android:textColor="#ffffff"
                android:textStyle="bold"
                android:background="@drawable/start_bt"/>

        </LinearLayout>




    </FrameLayout>


</LinearLayout>